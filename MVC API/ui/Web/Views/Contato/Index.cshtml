@using Model
@model List<ContatoModel>


<h2>Contatos</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>Sexo</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var contato in Model)
        {
            <tr>
                <td>@contato.Id</td>
                <td>@contato.Nome</td>
                <td>@contato.Telefone</td>
                <td>@contato.Email</td>
                <td>@contato.DataNascimento</td>
                <td>@contato.Sexo.Sexo</td>
                <td>
                    <a href="Contato/Edit/@contato.Id" class="btn btn-info btn-xs">Editar</a>
                    <button class="btn btn-danger btn-xs" onclick="msg({ nome: '@contato.Nome', id: @contato.Id })">Excluir</button>

                </td>
            </tr>
        }



    </tbody>
</table>


@section SCRIPTS{
    <script>

        function msg(obj) {
            var text = "Deseja excluir o contato " + obj.nome + " ? ";

            if (confirm(text)) {
                window.location = "Contato/Delete/" + obj.id;
            }
        }

    </script>
}



